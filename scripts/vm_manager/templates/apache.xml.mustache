<domain type='xen' >
    <name>{{name}}</name>
    <os>
        <type>linux</type>
        <kernel>{{kernel}}</kernel>
        <cmdline>root=/dev/xvda1 ro console=hvc0 ip=::::{{name}}::dhcp</cmdline>
    </os>
    <memory>{{memory}}</memory>
    <vcpu>{{num_cpu}}</vcpu>
    <devices>
        <disk type='file'>
            <source file='{{image_path}}'/>
            <target dev='xvda1'/>
        </disk>
    </devices>
</domain>
